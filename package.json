{
  "name": "quiz-app",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "frontend": "cd frontend && npm run dev",
    "backend": "cd Backend && npm run dev",
    "start": "electron .",
    "electron": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.exam.secure",
    "productName": "Secure Exam App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0"
  }
}
